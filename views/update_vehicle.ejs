<!-- include header -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Application</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
        crossorigin="anonymous" />
    <link rel="stylesheet" href="./css/add-user.css">
</head>

<body>

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/display-vehicle"><i class="fas fa-angle-double-left"></i> All Users</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Vehicles</h2>
                <span class="text-light">Use the below form to Update the vehicles</span>
            </div>

            <!-- add user form -->
            <!-- form handling -->
            <form method="POST" id="update_vehicle">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-light">Vehicle Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="firstandlastname" value="<%= user.VehicleName %>"
                            placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Brand</label>
                        <input type="text" name="Pricing" value="<%= user.Brand%>" placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Vehicle Type</label>
                        <input type="text" name="Date" value="<%= user.vehicleType%>" placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Registration Number</label>
                        <input type="text" name="PickupState" value="<%= user.RegistrationNumber%>"
                            placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Vehicle RC Number</label>
                        <input type="text" name="PickupCity" value="<%= user.VehicleRCNumber%>"
                            placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Vehicle Number</label>
                        <input type="text" name="DropState" value="<%= user.VehicleNumber%>"
                            placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Colour</label>
                        <input type="text" name="DropCity" value="<%= user.Colour%>" placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-light">Car Insurance Number</label>
                        <input type="text" name="emailID" value="<%= user.CarinsuranceNumber%>"
                            placeholder="example@gmail.com">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
        integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
        crossorigin="anonymous"></script>
    <script src="./js/update-vehicle.js"></script>
</body>

</html>
<!-- /include footer -->